                android:id="@+id/btjiankang"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:background="@drawable/xjiangkang"
                 android:duplicateParentState="true" 
                android:layout_marginBottom="10dp"  />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:text="健康服务" />
        </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >
<LinearLayout
    android:id="@+id/ll_xiangguan"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:background="#ff9640" 
            android:layout_marginRight="3dp"
            android:orientation="vertical"
             android:paddingTop="18dp"
             android:gravity="center"
            android:layout_weight="1">
               <ImageView
                
                android:id="@+id/btxiangguan"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:background="@drawable/xxiangguan"
                 android:duplicateParentState="true" 
                android:layout_marginBottom="10dp"  />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:text="相关查询" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_xiazai"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:background="#fe4d75" 
            android:orientation="vertical"
             android:paddingTop="18dp"
             android:gravity="center"
            android:layout_weight="1">
